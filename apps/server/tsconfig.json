{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@packages/types": ["../../packages/types"],
      "@packages/types/*": ["../../packages/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
